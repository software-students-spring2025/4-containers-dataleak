[MASTER]
# List of plugins to load.
load-plugins=

[MESSAGES CONTROL]
# Disable the specific messages or error codes.
disable=
disable=
    C0103,  # Invalid name
    E1101,  # No member in module
    W0611,  # Unused import
    W0718,  # Broad exception caught
    C0114,  # Missing module docstring
    C0411,  # Wrong import order
    C0116,  # Missing function docstring
    C0304,  # Missing final newline
    E0401,  # Import error
    reportMissingModuleSource  # Missing module source

[FORMAT]
# Naming conventions (already addressed in disable)
variable-naming-style=snake_case
attribute-naming-style=snake_case

[REPORTS]
# Disable pylint's report on code style issues.
output-format=colorized

[EXTERNAL DEPENDENCIES]
# Allow for no-member errors for specific external modules
ignored-modules=clarifai_grpc

[MESSAGES CONTROL]
disable=all
enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,
        unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,
        bad-open-mode 